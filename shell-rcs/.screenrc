# Always force bash
shell "/bin/bash"

# No startup message when starting screen
startup_message off

# No visual bell
vbell off

# Longer scrollback support
defscrollback 10000

# Caption definition
# <http://www.gnu.org/software/screen/manual/html_node/String-Escapes.html>
caption always "%H | %Lw"

# Bind Alt+a Alt+d to toggle through windows (linux machines)
# bindkey ^[a prev
# bindkey ^[d next
# ... mac machines (option+..)
bindkey å prev
bindkey ∂ next

# Bind Alt+w Alt+s to toggle through tabs
# bindkey ^[w focus prev
# bindkey ^[s focus next
# ... mac machines (option+..)
bindkey ‚ focus next

# disable locking of screen
bind ^x
bind x

# -- fin.
